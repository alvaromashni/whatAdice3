<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="OutlinedRedCard" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">@color/brand_red</item>
        <item name="strokeWidth">2dp</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">20dp</item>
    </style>

    <style name="PrimaryPillButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/white</item>

        <item name="android:minHeight">56dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>

        <item name="cornerRadius">28dp</item>
        <item name="backgroundTint">@color/brand_red</item>
        <item name="android:backgroundTint">@color/brand_red</item>
        <item name="rippleColor">@android:color/white</item>
    </style>


    <style name="SecondaryPillOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:minHeight">56dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
    </style>

</resources>